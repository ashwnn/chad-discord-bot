### Copy this file to .env and fill in the values before running `docker-compose up` ###

# Discord Bot Token (required to run the bot service)
DISCORD_BOT_TOKEN=

# Grok API key (optional for testing)
GROK_API_KEY=

# Grok API base URL (default)
GROK_API_BASE=https://api.x.ai/v1
GROK_CHAT_MODEL=grok-beta
GROK_IMAGE_MODEL=grok-image-1

# Database path inside the container (mapped to ./data on host)
DATABASE_PATH=/data/grok_bot.sqlite3

# Web service host/port
WEB_HOST=0.0.0.0
WEB_PORT=8000